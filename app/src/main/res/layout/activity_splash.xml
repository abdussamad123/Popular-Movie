<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/color_primary_80"
    >

    <!-- android:background="@drawable/splash_background"-->
    <ImageView
        android:id="@+id/idImgSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mona_sans_medium"
        android:gravity="center_horizontal"
        android:letterSpacing="0.02"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="@id/idImgSplash"
        app:layout_constraintStart_toStartOf="@id/idImgSplash"
        app:layout_constraintTop_toBottomOf="@id/idImgSplash" />

</androidx.constraintlayout.widget.ConstraintLayout>