<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".appcomponent.presentation.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by"
        android:id="@+id/tvSortBy"
        android:textSize="@dimen/sp_18"
        android:fontFamily="@font/mona_sans_medium"
        android:drawableRight="@drawable/ic_arrow_right_24"
        android:paddingVertical="@dimen/dp_5"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_5"
        android:elevation="@dimen/dp_5"
        android:background="@drawable/bg_shape_rec_radius_15"
        android:textColor="@color/color_item_text"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_by"
        android:id="@+id/tvFilterBy"
        android:textSize="@dimen/sp_18"
        android:paddingVertical="@dimen/dp_5"
        android:paddingStart="@dimen/dp_12"
        android:elevation="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:fontFamily="@font/mona_sans_medium"
        android:drawableRight="@drawable/ic_arrow_right_24"
        android:background="@drawable/bg_shape_rec_radius_15"
        android:textColor="@color/color_item_text"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSortBy"
        app:layout_constraintBottom_toBottomOf="@+id/tvSortBy"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rvMovie"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:itemCount="12"
        android:layout_marginVertical="@dimen/dp_20"
        tools:listitem="@layout/item_movie"
        app:layout_constraintTop_toBottomOf="@+id/tvSortBy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>